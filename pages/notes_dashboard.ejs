<div class="notes-content">
    <div class="note-pad">
        <div class="notes">
            <div class="notes-hero btn-active ">
                <h3>NOTES</h3>
            </div>
            <div class="notes-list">
                <ol>
                    <% if (notes.length > 0) { %>
                        <% notes.forEach(note => { %>
                            <li>
                                <div class="note">
                                    <h5><%= note.note_name %> </h5>
                                    <p><%= note.note %> </p>
                                    <h6><i><%= note.datetime %> </i></h6>
                                <div class="buttons-inline">
                                    <button class="btn btn-primary edit" value="Edit" id= "<%= note.idnote%>">Edit</button>
                                    <button class="btn btn-danger" value="Delete" onclick="showConfirmation(<%= note.idnote%>)">Delete</button>
                                </div>
                                </div>
                            </li>   
                        <% }) %>
                    <% } %> 
                    
                </ol>
            </div>
        </div>
        <div class="edit-note">
            <h1>Edit Note</h1>
            <h6><i></i></h6>
            <form class="text-area" method="POST" action="/update/task/">
                <textarea name="new_note" class="form-control" cols="50" rows="10">
                </textarea>
            <br>
            <div class="save-btn">
                <button class="btn btn-primary" value="Save">Save</button>
            </div>
            </form>
        </div>
    </div>
</div>
<div class="model">
    <div class="model-header">
        <h4>Confirm Deletion</h4>
        <p>Are you sure you want to delete this note</p>
    </div>
    <br>
    <div class="model-body">
        <button class=" btn btn-primary" value="confirm">Confirm</button>
        <button class="btn btn-danger" value="cancel">Cancel</button>
    </div>
</div>
